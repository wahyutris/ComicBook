    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.showBack = true;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @*OLD VERSION*@
        @*<h1>@Model.Title</h1>
        <h2>Issue: #@Model.IssueNumber</h2>

        <h5>Description:</h5>
        <div>@Html.Raw(Model.Description)</div>

        <h5>Artist:</h5>
